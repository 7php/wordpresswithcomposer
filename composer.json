{
  "name": "sevenphp/wordpresswithcomposer",
  "description": "This is a base setup for using wordpress with composer & git workflow. See the readme of usage.",
  "keywords": ["wordpress", "use composer with wordpress", "wordpress composer", "composer wordpress"],
  "license": "MIT",
  "authors": [
    {
      "name": "Wasseem Khayrattee",
      "email": "git@7php.com",
      "homepage": "https://7php.com/"
    }
  ],
  "type": "project",
  "config": {
    "vendor-dir": "www/vendor",
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": ">=7.0"
    },
    "preferred-install": {
      "sevenphp/*": "source",
      "*": "dist"
    }
  },
  "extra": {
    "wordpress-install-dir": "www/public/wp",
    "installer-paths": {
      "www/public/wp-content/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "www/public/wp-content/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    }
  },
  "require": {
    "vlucas/phpdotenv": "3.3.3",
    "composer/installers": "1.6.0",
    "johnpbloch/wordpress": "5.2.0",
    "wpackagist-theme/twentyfifteen": "2.5",
    "wpackagist-plugin/akismet": "4.1.1"
  },
  "require-dev": {
    "wpackagist-plugin/query-monitor": "3.3.4",
    "roave/security-advisories": "dev-master",
    "dealerdirect/phpcodesniffer-composer-installer": "*",
    "wp-coding-standards/wpcs": "*"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org/"
    }
  ]
}