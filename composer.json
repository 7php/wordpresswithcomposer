{
  "name": "sevenphp/wordpresswithcomposer",
  "description": "This is a base setup for using wordpress with composer & git workflow. See the readme of usage.",
  "keywords": ["wordpress", "use composer with wordpress", "wordpress composer", "composer wordpress"],
  "license": "GPL-3.0",
  "authors": [
    {
      "name": "Wasseem Khayrattee",
      "email": "git@7php.com",
      "homepage": "https://7php.com/"
    }
  ],
  "type": "project",
  "config": {
    "vendor-dir": "vendor",
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": "7.4"
    },
    "preferred-install": {
      "sevenphp/*": "source",
      "*": "dist"
    }
  },
  "extra": {
    "wordpress-install-dir": "public/wp",
    "installer-paths": {
      "public/wp-content/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "public/wp-content/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "public/wp-content/{$name}/": [
        "type:wordpress-dropin"
      ],
      "public/wp-content/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    }
  },
  "require": {
    "vlucas/phpdotenv": "5.3.0",
    "composer/installers": "1.11.0",
    "johnpbloch/wordpress": "5.7.1",
    "wpackagist-theme/twentytwenty": "1.7",
    "wpackagist-plugin/akismet": "4.1.9",
    "wpackagist-plugin/updraftplus": "1.16.56",
    "wpackagist-plugin/wp-optimize": "3.1.9",
    "wpackagist-plugin/google-sitemap-generator": "4.1.1",
    "wpackagist-plugin/wp-seopress": "4.6.0.2",
    "wpackagist-plugin/ninjafirewall": "4.3.3",
    "wpackagist-plugin/pretty-link": "3.2.3",
    "wpackagist-plugin/wp-cron-status-checker": "1.2.2",
    "wpackagist-plugin/advanced-cron-manager": "2.4.1",
    "wpackagist-plugin/fast-velocity-minify": "3.2.1",
    "wpackagist-plugin/imagekit": "4.1.0",
    "wpackagist-plugin/two-factor": "0.7.0",
    "wpackagist-plugin/host-analyticsjs-local": "4.0.5"
  },
  "require-dev": {
    "wpackagist-plugin/query-monitor": "3.6.8",
    "wpackagist-plugin/debug-bar": "1.1.2",
    "roave/security-advisories": "dev-master",
    "dealerdirect/phpcodesniffer-composer-installer": "*",
    "wp-coding-standards/wpcs": "*"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org/"
    }
  ]
}
