{
  "name": "sevenphp/wordpresswithcomposer",
  "description": "This is a base setup for using wordpress with composer & git workflow. See the readme of usage.",
  "keywords": ["wordpress", "use composer with wordpress", "wordpress composer", "composer wordpress"],
  "license": "MIT",
  "authors": [
    {
      "name": "Wasseem Khayrattee",
      "email": "git@7php.com",
      "homepage": "http://7php.com/"
    }
  ],
  "type": "project",
  "config": {
    "vendor-dir": "www/vendor",
    "platform": {
      "php": "7.0"
    },
    "preferred-install": {
      "sevenphp/*": "source",
      "*": "dist"
    },
    "sort-packages": true
  },
  "extra": {
    "wordpress-install-dir": "www/public/wp",
    "installer-paths": {
      "www/public/wp-content/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "www/public/wp-content/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    }
  },
  "require": {
    "johnpbloch/wordpress": "^4.7",
    "wpackagist-theme/twentyfifteen": "^1",
    "wpackagist-plugin/akismet": "^3",
    "composer/installers": "~1.0"
  },
  "require-dev": {
    "wpackagist-plugin/query-monitor": "^2"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org/"
    }
  ]
}
